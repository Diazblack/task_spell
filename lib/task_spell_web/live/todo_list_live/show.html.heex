<.header>
  Todo List: {@todo_list.title}
  <:subtitle>{@todo_list.description}</:subtitle>
  <:actions>
    <.link patch={~p"/todo_lists/#{@todo_list}/show/edit"} phx-click={JS.push_focus()}>
      <.button>Edit List</.button>
    </.link>

  </:actions>
</.header>

<.header class="mt-10">
  Items
  <:actions>
    <.link patch={~p"/todo_lists/#{@todo_list}/todo_items/new"}>
      <.button>New Todo Item</.button>
    </.link>
  </:actions>
</.header>
  <.table 
    id="todo_items"
    rows={@todo_list.todo_items}
  >
    <:col :let={item} label="Done"> 
      <%= if item.is_done do %>
       <%!-- <.icon name="hero-check-solid" class="inline w-4 h-4 text-green-500 ml-2" />
        --%>
        âœ…
      <% end %>
    </:col>
    <:col :let={item} label="Title">{item.title}</:col>
    <:col :let={item} label="Description">{item.description}</:col>

  </.table>

<.back navigate={~p"/todo_lists"}>Back to Todo Lists</.back>

<.modal :if={@live_action == :edit} id="todo_list-modal" show on_cancel={JS.patch(~p"/todo_lists/#{@todo_list}")}>
  <.live_component
    module={TaskSpellWeb.TodoListLive.FormComponent}
    id={@todo_list.id}
    title={@page_title}
    action={@live_action}
    todo_list={@todo_list}
    patch={~p"/todo_lists/#{@todo_list}"}
  />
</.modal>
